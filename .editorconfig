root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.{js,json,vue}]
indent_size = 2

[composer.json]
indent_size = 4

[*.php]
indent_size = 4

[*.sql]
indent_size = 4

[*.tsv]
indent_style = tab
trim_trailing_whitespace = false
